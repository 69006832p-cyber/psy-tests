<!DOCTYPE html>
<html lang="ru">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>–¢–µ—Å—Ç –Ω–∞ —Ç–∏–ø –ª–∏—á–Ω–æ—Å—Ç–∏</title>
  <style>
    body {
      font-family: 'Arial', sans-serif;
      background: linear-gradient(135deg, #f8c1ff, #d1a4ff);
      text-align: center;
      padding: 20px;
    }
    .question {
      background: white;
      border-radius: 15px;
      padding: 20px;
      margin: 20px auto;
      width: 90%;
      max-width: 600px;
      box-shadow: 0 4px 10px rgba(0,0,0,0.2);
    }
    button {
      background-color: #a020f0;
      color: white;
      border: none;
      padding: 10px 20px;
      border-radius: 10px;
      cursor: pointer;
      margin-top: 10px;
    }
    button:hover {
      background-color: #d25fff;
    }
  </style>
</head>
<body>

  <h1>üß† –¢–µ—Å—Ç –Ω–∞ —Ç–∏–ø –ª–∏—á–Ω–æ—Å—Ç–∏ (MBTI)</h1>
  <div id="quiz"></div>
  <div id="result"></div>

  <script>
    const questions = [
      { q: "1. –ö–æ–≥–¥–∞ —É —Ç–µ–±—è –≤—ã—Ö–æ–¥–Ω–æ–π, —Ç—ã –ø—Ä–µ–¥–ø–æ—á–∏—Ç–∞–µ—à—å:", a: ["–ü–æ–±—ã—Ç—å –¥–æ–º–∞", "–ü–æ–π—Ç–∏ –Ω–∞ –≤–µ—á–µ—Ä–∏–Ω–∫—É"], t: ["I", "E"] },
      { q: "2. –ü—Ä–∏ –ø—Ä–∏–Ω—è—Ç–∏–∏ —Ä–µ—à–µ–Ω–∏—è —Ç—ã —á–∞—â–µ –ø–æ–ª–∞–≥–∞–µ—à—å—Å—è –Ω–∞:", a: ["–§–∞–∫—Ç—ã –∏ –ª–æ–≥–∏–∫—É", "–ò–Ω—Ç—É–∏—Ü–∏—é –∏ —á—É–≤—Å—Ç–≤–∞"], t: ["T", "F"] },
      { q: "3. –¢—ã —á—É–≤—Å—Ç–≤—É–µ—à—å —Å–µ–±—è –∫–æ–º—Ñ–æ—Ä—Ç–Ω–æ, –∫–æ–≥–¥–∞:", a: ["–ü–ª–∞–Ω –≤—Å—ë —Ä–∞—Å–ø–∏—Å–∞–Ω", "–ú–æ–∂–Ω–æ –∏–º–ø—Ä–æ–≤–∏–∑–∏—Ä–æ–≤–∞—Ç—å"], t: ["J", "P"] }
    ];

    let scores = { I: 0, E: 0, T: 0, F: 0, J: 0, P: 0 };
    let index = 0;

    const quiz = document.getElementById("quiz");
    const result = document.getElementById("result");

    function showQuestion() {
      if (index < questions.length) {
        const q = questions[index];
        quiz.innerHTML = `
          <div class="question">
            <p>${q.q}</p>
            <button onclick="answer('${q.t[0]}')">${q.a[0]}</button>
            <button onclick="answer('${q.t[1]}')">${q.a[1]}</button>
          </div>
        `;
      } else {
        showResult();
      }
    }

    function answer(type) {
      scores[type]++;
      index++;
      showQuestion();
    }

    function showResult() {
      const type = `${scores.E > scores.I ? "E" : "I"}${scores.T > scores.F ? "T" : "F"}${scores.J > scores.P ? "J" : "P"}`;
      quiz.innerHTML = "";
      result.innerHTML = `<h2>–í–∞—à —Ç–∏–ø –ª–∏—á–Ω–æ—Å—Ç–∏: <b>${type}</b></h2>
      <p>–°–ø–∞—Å–∏–±–æ –∑–∞ —É—á–∞—Å—Ç–∏–µ!</p>
      <a href="—Ç–µ—Å—Ç—ã.html"><button>–ù–∞–∑–∞–¥ –∫ –≤—ã–±–æ—Ä—É</button></a>`;
    }

    showQuestion();
  </script>

</body>
</html>
