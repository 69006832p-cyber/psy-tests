    }

    function answer(points) {
      score += points;
      index++;
      showQuestion();
    }

    function showResult() {
      let message = "";
      if (score <= 2) message = "–¢—ã –ø–æ–∫–∞ –Ω–µ –æ—á–µ–Ω—å —É–≤–µ—Ä–µ–Ω –≤ —Å–µ–±–µ, –Ω–æ –≤—Å—ë –ø—Ä–∏—Ö–æ–¥–∏—Ç —Å –æ–ø—ã—Ç–æ–º üí´";
