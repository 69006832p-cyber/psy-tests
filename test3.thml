  <script>
    const questions = [
      { q: "1. –¢—ã —á–∞—Å—Ç–æ —Å–æ–º–Ω–µ–≤–∞–µ—à—å—Å—è –≤ —Å–≤–æ–∏—Ö —Ä–µ—à–µ–Ω–∏—è—Ö?", a: ["–î–∞", "–ù–µ—Ç"], s: [0, 2] },
      { q: "2. –¢–µ–±–µ –ª–µ–≥–∫–æ –≤—ã—Å–∫–∞–∑—ã–≤–∞—Ç—å —Å–≤–æ—ë –º–Ω–µ–Ω–∏–µ –≤ –∫–æ–º–ø–∞–Ω–∏–∏?", a: ["–î–∞", "–ù–µ—Ç"], s: [2, 0] },
      { q: "3. –¢—ã —á—É–≤—Å—Ç–≤—É–µ—à—å —Å–µ–±—è —Å–ø–æ–∫–æ–π–Ω–æ –≤ –Ω–æ–≤—ã—Ö —Å–∏—Ç—É–∞—Ü–∏—è—Ö?", a: ["–î–∞", "–ù–µ—Ç"], s: [2, 0] }
    ];

    let index = 0, score = 0;

    const quiz = document.getElementById("quiz");
    const result = document.getElementById("result");

    function showQuestion() {
      if (index < questions.length) {
        const q = questions[index];
        quiz.innerHTML = `
          <div class="question">
            <p>${q.q}</p>
            <button onclick="answer(${q.s[0]})">${q.a[0]}</button>
