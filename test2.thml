  <script>
    const questions = [
      { q: "1. –¢—ã —á–∞—Å—Ç–æ —á—É–≤—Å—Ç–≤—É–µ—à—å —É—Å—Ç–∞–ª–æ—Å—Ç—å –±–µ–∑ –ø—Ä–∏—á–∏–Ω—ã?", a: ["–î–∞", "–ù–µ—Ç"], s: [2, 0] },
      { q: "2. –õ–µ–≥–∫–æ –ª–∏ —Ç–µ–±—è –≤—ã–≤–µ—Å—Ç–∏ –∏–∑ —Å–µ–±—è?", a: ["–î–∞", "–ù–µ—Ç"], s: [2, 0] },
      { q: "3. –£ —Ç–µ–±—è —á–∞—Å—Ç–æ –±–æ–ª–∏—Ç –≥–æ–ª–æ–≤–∞ –∏–ª–∏ –º—ã—à—Ü—ã?", a: ["–î–∞", "–ù–µ—Ç"], s: [2, 0] }
    ];

    let index = 0, score = 0;

    const quiz = document.getElementById("quiz");
    const result = document.getElementById("result");

    function showQuestion() {
      if (index < questions.length) {
        const q = questions[index];
        quiz.innerHTML = `
          <div class="question">
            <p>${q.q}</p>
            <button onclick="answer(${q.s[0]})">${q.a[0]}</button>
            <button onclick="answer(${q.s[1]})">${q.a[1]}</button>
          </div>
        `;
      } else {
        showResult();
      }
    }

    function answer(points) {
      score += points;
      index++;
      showQuestion();
    }

    function showResult() {
      let message = "";
      if (score <= 2) message = "–£ —Ç–µ–±—è –Ω–∏–∑–∫–∏–π —É—Ä–æ–≤–µ–Ω—å —Å—Ç—Ä–µ—Å—Å–∞. –û—Ç–ª–∏—á–Ω–æ!";
      else if (score <= 4) message = "–£–º–µ—Ä–µ–Ω–Ω—ã–π —É—Ä–æ–≤–µ–Ω—å —Å—Ç—Ä–µ—Å—Å–∞. –ù–µ–º–Ω–æ–≥–æ –æ—Ç–¥—ã—Ö–∞ –Ω–µ –ø–æ–º–µ—à–∞–µ—Ç.";
      else message = "–í—ã—Å–æ–∫–∏–π —É—Ä–æ–≤–µ–Ω—å —Å—Ç—Ä–µ—Å—Å–∞! –ü–æ—Å—Ç–∞—Ä–∞–π—Å—è —Ä–∞—Å—Å–ª–∞–±–∏—Ç—å—Å—è –∏ –Ω–∞–π—Ç–∏ –±–∞–ª–∞–Ω—Å.";

      quiz.innerHTML = "";
